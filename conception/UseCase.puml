@startuml
left to right direction
actor "Visiteur" as Visiteur
actor "Admin" as Admin

package "CAR RENTAL" {
    usecase "Consulter la page d'accueil" as UC_Accueil
    usecase "Voir les détails d'une Voiture" as UC_Details

    usecase "Gérer les Voitures(CRUD)" as UC_CRUD
    usecase "Filtrer les Voitures" as UC_Filtrer
    usecase "Rechercher des Voitures" as UC_Rechercher
}

' Relations Visiteur
Visiteur -- UC_Accueil
UC_Accueil <.. UC_Details : <<extend>>

' Relations Admin
Admin -- UC_CRUD
UC_CRUD <.. UC_Filtrer : <<extend>>
UC_CRUD <.. UC_Rechercher : <<extend>>

@endum
@enduml